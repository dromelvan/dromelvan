<% if card.yellow? then %>
  <%= image_tag "match-events/yellow-card.png", alt: "Yellow card", title: "Yellow card", class: "match-event-icon" %>  
<% else %>
  <%= image_tag "match-events/red-card.png", alt: "Red card", title: "Red card", class: "match-event-icon" %>  
<% end %>

<%= render card.player %> (<%= card.time %><% if card.added_time > 0 then %>+<%= card.added_time %><% end %>)
