<% if card.card_type == 0 then %>
  <%= image_tag('/assets/match-events/yellow_card.png', alt: "Yellow card", title: "Yellow card") %>
<% else %>
  <%= image_tag('/assets/match-events/red_card.png', alt: "Red card", title: "Red card") %>    
<% end %>

<%= render card.player %> (<%= card.time %><% if card.added_time > 0 then %>+<%= card.added_time %><% end %>)
