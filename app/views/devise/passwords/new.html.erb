<% provide :title, "Reset password"
   provide :breadcrumbs, breadcrumbs([ :title ]) %>

<h1>Reset Password</h1>

<div class="section">
  
  <div class="form-context">
    <p>Enter your email to recieve instructions on how to reset your password.</p>
    <ul class="form-context-links">
      <%= render "devise/shared/links" %>
    </ul>
  </div>
  
  <div class="form-container">
    <h2>Account Information</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <fieldset>
        <legend><span>Account information</span></legend>
    
        <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, required: true, autofocus: true %>
        </div>
      </fieldset>
      <div class="button-panel">
        <%= f.button "Send", class: "form-button", name: "submit-button" %>
      </div>        
    <% end %>
  </div>
  
  <div class="form-context-image">
    <%= image_tag "context/reset_password.png", alt: "Context images." %>
  </div>
  
</div>
