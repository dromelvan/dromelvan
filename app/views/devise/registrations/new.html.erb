<% provide :title, "Sign up"
   provide :breadcrumbs, breadcrumbs([ "Sign up" ]) %>

<h1>Sign Up</h1>

<div class="section">
  <div class="form-context">
    <p>Enter your email and name and choose a password to sign up as a user. You will then be able to sign in with your email and register a team.
       Your name will be publicly visible but your email will not.</p>
    <ul class="form-context-links">
      <%= render "devise/shared/links" %>
    </ul>
    <%= render "devise/shared/oauth" %>
  </div>
  <div class="form-container">
    <h2>User Information</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>        
      <fieldset>
        <legend><span>User information</span></legend>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, required: true, class: "autofocus", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, required: true %>
        </div>
      
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, required: true, autocomplete: "off" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, required: true, autocomplete: "off" %>
        </div>
      </fieldset>
      <div class="button-panel">
        <%= f.button "Sign up", class: "form-button", name: "submit-button" %>
      </div>        
    <% end %>
  </div>
      
  <div class="form-context-image">
    <div>
      <%= image_tag "context/sign_up.png", alt: "Context images." %>
    </div>
  </div>

</div>  
