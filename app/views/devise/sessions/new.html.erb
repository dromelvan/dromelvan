<% provide :title, "Sign in"
   provide :breadcrumbs, breadcrumbs([ :title ]) %>

<h1>Sign In</h1>

<div class="section">
  
  <div class="form-context">
    <p>Enter your email and password to sign in and administer your team.</p>
    <ul class="form-context-links">
      <%= render "devise/shared/links" %>
    </ul>
    <%= render "devise/shared/oauth" %>
  </div>

  <div class="form-container">
    <h2>Sign In Details</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>        
      <fieldset>
        <legend><span>Sign In Details</span></legend>
        <% if !alert.nil? && !alert.empty? %>
        <div class="alert alert-danger"><%= alert %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, required: true, autofocus: true %>
        </div>
      
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, required: true, autocomplete: "off" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>           
        <% end %>            
      </fieldset>              
      <div class="button-panel">
        <%= f.button "Sign in", class: "form-button", name: "submit-button" %>
      </div>                    
    <% end %>
  </div>

 
  <div class="form-context-image">
    <%= image_tag "context/sign_in.png", alt: "Context images." %>
  </div>
  
</div>
  
