<% if goal.penalty? then %>
  <%= image_tag "match-events/penalty-goal.png", alt: "Penalty goal", title: "Penalty goal", class: "match-event-icon" %>  
<% elsif goal.own_goal? then %>
  <%= image_tag "match-events/own-goal.png", alt: "Own goal", title: "Own goal", class: "match-event-icon" %>  
<% else %>
  <%= image_tag "match-events/goal.png", alt: "Goal", title: "Goal", class: "match-event-icon" %>  
<% end %>

<%= render goal.player %> (<%= goal.time %><% if goal.added_time > 0 then %>+<%= goal.added_time %><% end %>)
