<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "DrÃ¶melvan | #{yield(:title)}" : "DrÃ¶melvan" %></title>

  <%= split_stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  
  <meta name="robots" content="noindex,nofollow" >  
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>

<main role="main">
  <%= yield(:hero_unit) %>
  <% resource = self.instance_variable_get "@#{controller_name.tableize.singularize}"
     if !resource.nil? %>
  <div class="content <%= controller_name.dasherize %> <%= action_name %>" id="<%= resource.id %>">
  <% else %>
  <div class="content <%= controller_name.dasherize %> <%= action_name %>">
  <% end %>
    <!-- Maybe we don't want breadcrumbs after all.
    <%= yield(:breadcrumbs) %>
    -->
    <%= render 'devise/shared/notice' %>
    
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    
    <%= yield %>
  </div>
</main>

<%= render 'layouts/footer' %>

</body>
</html>
