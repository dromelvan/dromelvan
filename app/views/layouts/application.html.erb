<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "Drömelvan | #{yield(:title)}" : "Drömelvan" %></title>

  <%= split_stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  
  <meta name="robots" content="noindex,nofollow" >  
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
<%= render 'layouts/header' %>
<%= render 'layouts/navbar' %>

<main role="main">
  <%= content_for?(:hero_unit) ? yield(:hero_unit) : '' %>
  <div class="content <%= controller_name %> <%= action_name %>">
    <%= content_for?(:breadcrumbs) ? yield(:breadcrumbs) : '' %>
    <%= render 'devise/shared/notice' %>
    <%= yield %>
  </div>
</main>

<%= render 'layouts/footer' %>

</body>
</html>
