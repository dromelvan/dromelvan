<div class="match-details preview">
  <% season = match.match_day.premier_league.season %>
  <dl class="match-preview">
    <dt>Form:</dt>
    <dd>
      <%= render 'teams/team_form', team: team, match_day: match.match_day %>
    </dd>
    <% top_scorer = team.top_scorer(season) %>
    <dt>Top scorer:</dt>    
    <dd>
      <% if !top_scorer.nil? && top_scorer.goals > 0 %>
        <%= render top_scorer.player %>, <%= top_scorer.goals %> goals
      <% else %>
        No goals scored.
      <% end %>      
    </dd>
    <% most_valuable_player = team.most_valuable_player(season) %>
    <dt>Most valuable player:</dt>  
    <dd>
      <% if !most_valuable_player.nil? && most_valuable_player.points > 0 %>
        <%= render most_valuable_player.player %>, <%= most_valuable_player.points %> pts
      <% else %>
        No points scored.
      <% end %>
    </dd>
  </ul>
</div>
