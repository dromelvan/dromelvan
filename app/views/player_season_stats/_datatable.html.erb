<%
   url ||= player_season_stats_path
   season = @premier_league.season
%>
<%= render layout: 'layouts/datatable_ajax', locals: { table_class: 'player-season-stats',
                                                       url: url,
                                                       objects: 'players',
                                                       ajax_params: { season_id: season.id },
                                                       hide_controls: 'false',
                                                       column_classes: [ "ranking-column number-column",
                                                                         "player-column main-column",
                                                                         "team-simple-column",
                                                                         "team-column",
                                                                         "position-column",
                                                                         "appearances-column",
                                                                         "points-per-appearance-column",
                                                                         "goals-column",
                                                                         "assists-column",
                                                                         "yellow-cards-column",
                                                                         "red-cards-column",
                                                                         "mom-column",
                                                                         "rating-column",
                                                                         "form-column",
                                                                         "points-column number-column",
                                                                         "d11-team-column"] } do %>
  <thead>
    <tr>
      <th class="ranking-column number-column" title="Ranking">#</th>
      <th class="player-column main-column" title="Player">Player</th>
      <th class="team-simple-column" title="Team">T</th>
      <th class="team-column" title="Team">Team</th>
      <th class="position-column" title="Position">Pos</th>
      <th class="appearances-column" title="Appearances">App</th>
      <th class="points-per-appearance-column" title="Points per Appearance">PpA</th>
      <th class="goals-column" title="Goals">G</th>  
      <th class="assists-column" title="Assists">A</th>      
      <th class="yellow-cards-column" title="Yellow Cards">YC</th>  
      <th class="red-cards-column" title="Red Cards">RC</th>
      <th class="mom-column" title="Man of the Match">MoM</th>
      <th class="rating-column" title="Rating">R</th>
      <th class="form-column" title="Form">Form</th>
      <th class="points-column" title="Points">P</th>
      <th class="d11-team-column" title="D11 Team">D11 Team</th>
    </tr>
  </thead>  
<% end %>
