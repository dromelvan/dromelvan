<%
   @match_day ||= nil
   @d11_match_day ||= nil
   if !@match.nil?
     @season ||= @match.match_day.premier_league.season
   elsif !@match_day.nil?
     @season ||= @match_day.premier_league.season
   elsif !@d11_match_day.nil?
     @season ||= @d11_match_day.d11_league.season
   elsif !@d11_match.nil?
     @season ||= @d11_match.d11_match_day.d11_league.season
   end
   max_length ||= 1000
%>
<% if @season.nil? %>
<%= link_to player.name(max_length), player, class: "model-link", data: { toggle: "tooltip-ajax" } %>
<% else %>
<%= link_to player.name(max_length), show_season_player_path(player, @season), class: "model-link", data: { toggle: "tooltip-ajax" } %><% end %>