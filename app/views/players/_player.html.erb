<%
   @match_day ||= nil
   if !@match_day.nil?
     @season ||= @match_day.premier_league.season
   end
%>
<% if @season.nil? %>
<%= link_to player.name, player, class: "model-link", data: { toggle: "tooltip-ajax" } %>
<% else %>
<%= link_to player.name, show_season_player_path(player, @season), class: "model-link", data: { toggle: "tooltip-ajax" } %>
<% end %>