<% provide :title, @player.name
   provide :breadcrumbs, breadcrumbs([Player , @player.name, :select_season]) %> 
  
<h1><%= @player.name %></h1>
<%= render 'shared/administration_links', resource: @player %>
  
<div class="section">
  <div class="player-profile-container">  
    <div class="player-profile standard-panel">
      
      <div class="panel-heading">
        <h2>Player profile</h2>
      </div>
              
      <div class="section panel-body">
        <div class="image-container player-photo">
          <%= render 'player_photo', player: @player %>
          <%= image_tag '/assets/missing/club-crest-large.png', class: "club-crest" %>
          <p>
            <span class="points"><span class="value">123</span> points</span>
            <span class="ranking"><span class="value">32</span>nd ranking</span>
          </p>
        </div>
    
        <dl class="information">
          <dt>Full name:</dt>
          <dd>
            <% if !@player.full_name.nil? %>
              <%= @player.full_name %>
            <% else %>
              <%= @player.name %>
            <% end %>
          </dd>
          <dt>Nationality:</dt>
          <dd><%= render @player.country %></dd>
          <dt>Team:</dt>
          <dd>West Bromwich Albion Poo Poo</dd>
          <dt>D11 team:</dt>
          <dd>Eleven Robbie Savages</dd>        
        </dl>
    
        <dl class="data">
          <dt>Date of birth:</dt>
          <dd><%= @player.date_of_birth %> (age <%= @player.age %>)</dd>
          <dt>Height:</dt>
          <dd><%= @player.height %> cm</dd>
          <dt>Weight:</dt>
          <dd><%= @player.weight%> kg</dd>                  
          <dt>WhoScored Id:</dt>
          <dd><%= render 'players/whoscored_link', player: @player %></dd>
          <dt>Position:</dt>
          <dd>Midfielder</dd>
          <dt>Played pos:</dt>
          <dd>DMC, AMR, AMC</dd>                
        </dl>
    
        <div class="image-container club-crest">
          <%= image_tag '/assets/missing/club-crest-large.png' %>
        </div>
        
      </div>
    </div>
  </div>
</div>
