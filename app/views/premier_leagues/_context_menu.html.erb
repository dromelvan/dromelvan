<% premier_league ||= @premier_league %>
<%= render layout: 'layouts/context_menu_dropdown', locals: { resource: premier_league } do  %>
    <li class="dropdown-header">Season <%= premier_league.season.name %></li>
    <li><%= render premier_league %></li>
    <li><%= link_to "Latest match day", premier_league.match_days.current, class: "model-link" %></li>
    <li><%= link_to "League table", show_table_premier_league_path(premier_league), class: "model-link" %></li>
    <li><a href="#">Player stats</a></li>
<% end %>
