<% team ||= @team %>
<%= render layout: 'layouts/context_menu_dropdown', locals: { resource: team } do  %>
    <li class="dropdown-header"><%= team.name %></li>
    <li><%= link_to "Team squad #{@season.name}", show_season_team_path(team, @season), class: "model-link" %></li>
    <li><%= link_to "Fixtures and results #{@season.name}", show_fixtures_team_path(team, @season), class: "model-link" %></li>
<% end %>
