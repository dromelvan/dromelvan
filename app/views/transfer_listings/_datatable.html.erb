<%
   url ||= transfer_listings_path
%>
<%= render layout: 'layouts/datatable_ajax', locals: { table_class: 'transfer-listings',
                                                       url: url,
                                                       objects: 'players',
                                                       ajax_params: { transfer_day_id: transfer_day.id },
                                                       hide_controls: 'false',
                                                       sort_column: 1,
                                                       sort_order: 'asc',
                                                       column_classes: [ "player-column main-column", 
                                                                         "ranking-column number-column",                                                                         
                                                                         "team-simple-column",
                                                                         "position-column",
                                                                         "appearances-column",
                                                                         "points-per-appearance-column",
                                                                         "rating-column",
                                                                         "form-column",
                                                                         "points-column number-column",
                                                                         "d11-team-column",
                                                                         "d11-team-simple-column"] } do %>
  <thead>
    <tr>                                                       
      <th class="player-column main-column">Player</th>  
      <th class="ranking-column number-column" title="Ranking">#</th>
      <th class="team-simple-column">Team</th>
      <th class="position-column" title="Position">Pos</th>
      <th class="appearances-column" title="Appearances">App</th>
      <th class="points-per-appearance-column" title="Points per Appearance">PpA</th>
      <th class="rating-column" title="Rating">R</th>
      <th class="form-column">Form</th>
      <th class="points-column number-column" title="Points">P</th>  
      <th class="d11-team-column">Listed By</th>
      <th class="d11-team-simple-column" title="Listed Byy">LB</th>
    </tr>
  </thead>  
<% end %>
